{
  "name": "@veri-fit/common-ui",
  "description": "Common UI components",
  "private": true,
  "version": "0.1.0",
  "author": "Fabio Berta <fnberta@gmail.com>",
  "license": "MIT",
  "main": "build/cjs/index.js",
  "types": "build/cjs/index.d.ts",
  "module": "build/esm/index.js",
  "sideEffects": false,
  "files": [
    "src",
    "index.css",
    "tailwind.config.js",
    "build/cjs",
    "build/esm",
    "build/index.css"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc -b tsconfig.json tsconfig-esm.json && tailwindcss build index.css -o build/index.css",
    "dev": "tsc -b tsconfig.json tsconfig-esm.json --watch",
    "prepare": "yarn build"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "@veri-fit/common": "0.1.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "autoprefixer": "^10.0.1",
    "formik": "^2.2.1",
    "postcss": "^8.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tailwindcss": "^1.9.5",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "formik": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
