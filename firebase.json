{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "predeploy": ["yarn workspace @veri-fit/common build", "yarn workspace @veri-fit/functions build"],
    "source": "packages/functions",
    "runtime": "nodejs10"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
