    "@emotion/styled": "^10.0.27",
    "@fortawesome/fontawesome-free": "^5.12.0",
    "bulma": "^0.8.0",
    "classnames": "^2.2.6",
    "firebase": "^7.6.2",
    "formik": "^2.1.1",
    "gatsby": "^2.18.21",
    "gatsby-image": "^2.2.38",
    "gatsby-plugin-emotion": "^4.1.21",
    "gatsby-plugin-netlify": "^2.1.31",
    "gatsby-plugin-netlify-cms": "^4.1.35",
    "gatsby-plugin-portal": "^1.0.7",
