{
  "name": "veri-fit",
  "private": true,
  "description": "Website for veri-fit business",
  "version": "0.1.0",
  "author": "Fabio Berta <fnberta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop -H 0.0.0.0",
    "serve": "gatsby serve",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,sass,md,yml,yaml}'",
    "gen-graphql": "graphql-codegen --config gql.yml"
  },
  "dependencies": {
    "@brainhubeu/react-carousel": "^1.10.27",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@fortawesome/fontawesome-free": "^5.11.2",
    "bulma": "^0.8.0",
    "classnames": "^2.2.6",
    "firebase": "^7.2.3",
    "formik": "^2.0.3",
    "gatsby": "^2.17.7",
    "gatsby-image": "^2.2.30",
    "gatsby-plugin-emotion": "^4.1.13",
    "gatsby-plugin-netlify": "^2.1.23",
    "gatsby-plugin-netlify-cms": "^4.1.26",
    "gatsby-plugin-portal": "^1.0.7",
    "gatsby-plugin-react-helmet": "^3.1.13",
    "gatsby-plugin-sass": "^2.1.20",
    "gatsby-plugin-sharp": "^2.2.36",
    "gatsby-plugin-typescript": "^2.1.15",
    "gatsby-remark-images": "^3.1.28",
    "gatsby-remark-relative-images": "^0.2.3",
    "gatsby-source-filesystem": "^2.1.35",
    "gatsby-transformer-remark": "^2.6.32",
    "gatsby-transformer-sharp": "^2.3.2",
    "luxon": "^1.21.1",
    "netlify-cms-app": "^2.9.7",
    "node-sass": "^4.13.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.8.3",
    "@graphql-codegen/cli": "^1.8.3",
    "@graphql-codegen/typescript": "1.8.3",
    "@graphql-codegen/typescript-operations": "1.8.3",
    "@types/classnames": "^2.2.9",
    "@types/luxon": "^1.15.2",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/react-helmet": "^5.0.14",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "firebase-tools": "^7.6.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "**/*.{json,css,scss,sass,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}
