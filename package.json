{
  "name": "veri-fit",
  "private": true,
  "description": "Website for veri-fit business",
  "version": "0.1.0",
  "author": "Fabio Berta <fnberta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop -H 0.0.0.0",
    "serve": "gatsby serve",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,sass,md,yml,yaml}'",
    "gen-graphql": "graphql-codegen --config gql.yml"
  },
  "dependencies": {
    "@brainhubeu/react-carousel": "^1.10.17",
    "@emotion/core": "^10.0.14",
    "@emotion/styled": "^10.0.14",
    "@fortawesome/fontawesome-free": "^5.9.0",
    "bulma": "^0.7.5",
    "classnames": "^2.2.6",
    "formik": "^1.5.8",
    "gatsby": "^2.13.15",
    "gatsby-image": "^2.2.5",
    "gatsby-plugin-emotion": "^4.1.1",
    "gatsby-plugin-netlify": "^2.1.1",
    "gatsby-plugin-netlify-cms": "^4.1.3",
    "gatsby-plugin-react-helmet": "^3.1.1",
    "gatsby-plugin-sass": "^2.1.1",
    "gatsby-plugin-sharp": "^2.2.4",
    "gatsby-plugin-typescript": "^2.1.1",
    "gatsby-remark-images": "^3.1.4",
    "gatsby-remark-relative-images": "^0.2.2",
    "gatsby-source-filesystem": "^2.1.4",
    "gatsby-transformer-remark": "^2.6.3",
    "gatsby-transformer-sharp": "^2.2.2",
    "netlify-cms-app": "^2.9.6",
    "node-sass": "^4.12.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.4.0",
    "@graphql-codegen/cli": "^1.4.0",
    "@graphql-codegen/typescript": "1.4.0",
    "@graphql-codegen/typescript-operations": "1.4.0",
    "@types/classnames": "^2.2.9",
    "@types/react-helmet": "^5.0.8",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "**/*.{json,css,scss,sass,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}
