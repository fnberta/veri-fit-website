{
  "name": "veri-fit",
  "private": true,
  "description": "Website for veri-fit business",
  "version": "0.1.0",
  "author": "Fabio Berta <fnberta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop -H 0.0.0.0",
    "serve": "gatsby serve",
    "firebase:deploy": "firebase deploy",
    "firebase:emulator": "firebase emulators:start --only firestore,functions",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,sass,md,yml,yaml}'",
    "gen-graphql": "graphql-codegen --config gql.yml"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dialog-polyfill": "^0.5.0",
    "firebase": "^7.11.0",
    "formik": "^2.1.4",
    "gatsby": "^2.19.43",
    "gatsby-image": "^2.2.43",
    "gatsby-plugin-netlify": "^2.1.34",
    "gatsby-plugin-netlify-cms": "^4.1.41",
    "gatsby-plugin-portal": "^1.0.7",
    "gatsby-plugin-postcss": "^2.1.21",
    "gatsby-plugin-react-helmet": "^3.1.23",
    "gatsby-plugin-sharp": "^2.4.12",
    "gatsby-plugin-typescript": "^2.2.3",
    "gatsby-remark-images": "^3.1.49",
    "gatsby-remark-relative-images": "^0.3.0",
    "gatsby-source-filesystem": "^2.1.55",
    "gatsby-transformer-remark": "^2.6.58",
    "gatsby-transformer-sharp": "^2.3.18",
    "luxon": "^1.22.0",
    "netlify-cms-app": "^2.11.29",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-helmet": "^5.2.1",
    "react-transition-group": "^4.3.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@graphql-codegen/add": "^1.13.0",
    "@graphql-codegen/cli": "^1.13.0",
    "@graphql-codegen/typescript": "1.13.0",
    "@graphql-codegen/typescript-operations": "1.13.0",
    "@tailwindcss/ui": "^0.1.3",
    "@types/classnames": "^2.2.10",
    "@types/dialog-polyfill": "^0.5.0",
    "@types/jest": "^25.1.4",
    "@types/luxon": "^1.21.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@types/react-transition-group": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "autoprefixer": "^9.7.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "firebase-tools": "^7.15.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.2.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,css,scss,sass,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
