{
  "name": "veri-fit",
  "private": true,
  "description": "Website for veri-fit business",
  "version": "0.1.0",
  "author": "Fabio Berta <fnberta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop -H 0.0.0.0",
    "serve": "gatsby serve",
    "firebase:deploy": "firebase deploy",
    "firebase:emulator": "firebase emulators:start --only firestore,functions",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
