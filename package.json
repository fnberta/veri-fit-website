{
  "name": "veri-fit",
  "private": true,
  "description": "Website for veri-fit business",
  "version": "0.1.0",
  "author": "Fabio Berta <fnberta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop -H 0.0.0.0",
    "serve": "gatsby serve",
    "firebase:deploy": "firebase deploy",
    "firebase:emulator": "firebase emulators:start --only firestore,functions",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,sass,md,yml,yaml}'",
    "gen-graphql": "graphql-codegen --config gql.yml"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dialog-polyfill": "0.5.0",
    "firebase": "^7.18.0",
    "formik": "^2.1.5",
    "gatsby": "^2.24.47",
    "gatsby-image": "^2.4.16",
    "gatsby-plugin-netlify": "^2.3.13",
    "gatsby-plugin-netlify-cms": "^4.3.11",
    "gatsby-plugin-portal": "^1.0.7",
    "gatsby-plugin-postcss": "^2.3.11",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-sharp": "^2.6.27",
    "gatsby-plugin-typescript": "^2.4.18",
    "gatsby-remark-images": "^3.3.25",
    "gatsby-remark-relative-images": "^0.3.0",
    "gatsby-source-filesystem": "^2.3.24",
    "gatsby-transformer-remark": "^2.8.28",
    "gatsby-transformer-sharp": "^2.5.13",
    "luxon": "^1.24.1",
    "netlify-cms-app": "^2.12.19",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-transition-group": "^4.4.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@graphql-codegen/add": "^1.13.1",
    "@graphql-codegen/cli": "^1.13.1",
    "@graphql-codegen/typescript": "1.13.1",
    "@graphql-codegen/typescript-operations": "1.13.1",
    "@tailwindcss/ui": "^0.1.3",
    "@types/classnames": "^2.2.10",
    "@types/dialog-polyfill": "^0.5.0",
    "@types/jest": "^25.1.4",
    "@types/luxon": "1.24.2",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^5.0.15",
    "@types/react-transition-group": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "autoprefixer": "^9.8.6",
    "confusing-browser-globals": "^1.0.9",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^3.0.0",
    "firebase-tools": "^8.7.0",
    "husky": "^4.2.5",
    "jest": "^25.2.3",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "tailwindcss": "^1.2.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,css,scss,sass,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
